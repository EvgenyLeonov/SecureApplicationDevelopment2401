<head>
    <%- include("../shared/cssSupport.ejs") %>
    <title>Search Results</title>
</head>
<body>
<%- include("../shared/navigation.ejs") %>
<div class="container">
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm">
            <h2>Results</h2>
            <% if (results.length > 0) { %>
                <% for (let dog of results) { %>
                    <div class="card" style="width: 18rem; margin-top: 10px">
                        <img class="card-img-top" src="\<%= dog.dogUrl %>" alt="Dog portrait">
                        <h5 class="card-title"><%= dog.dogName %></h5>
                        <a href="#" class="btn btn-primary">Message</a>
                    </div>
            <% }} else { %>
                <h3>No results found!</h3>
            <% } %>
        </div>
        <div class="col-sm">
        </div>
    </div>
</div>
</body>